<project name="ml-ex3" default="compile" basedir=".">
	<description>
            description
    </description>
	<!-- Variables -->
	<property name="weka.dir" value="C:\Program Files\Weka-3-6" />
	<property name="lib.dir" value="commons-cli-1.2" />


	<!-- Define the CLASSPATH -->
	<path id="compile.classpath">
		<fileset dir="${weka.dir}">
			<include name="*.jar" />
		</fileset>
		<fileset dir="${lib.dir}">
			<include name="commons-cli*.jar"/>
		</fileset>
	</path>


	<!-- ================================= 
          target: clean              
         ================================= -->
	<target name="clean" description="Delete all generated files">
		<delete dir="classes" />
	</target>

	<!-- - - - - - - - - - - - - - - - - - 
          target: compile                      
         - - - - - - - - - - - - - - - - - -->
	<target name="compile" description="Compile the project">
		<mkdir dir="classes" />
		<javac srcdir="." destdir="classes" classpathref="compile.classpath"/>
	</target>
	<!-- - - - - - - - - - - - - - - - - - 
	          target: jar                      
	     - - - - - - - - - - - - - - - - - -->
	<target name="jar" depends="compile" description="create a Jar file for the application">
		<jar destfile="ml-ex3.jar">
			<fileset dir="classes" includes="**/*.class" />
			<manifest>
				<attribute name="Main-Class" value="main.Exercise3" />
			</manifest>
		</jar>
	</target>
	<!-- - - - - - - - - - - - - - - - - - 
		          target: run                      
		     - - - - - - - - - - - - - - - - - -->
	<!--<target name="run" depends="compile" description="runs the project">
		<java classname="main.Exercise3"/>
	</target>
	-->

</project>
